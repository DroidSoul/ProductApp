<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivProductImage"
        android:transitionName="profile"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:maxLines="2"
        android:id="@+id/tvName"
        android:transitionName="name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivProductImage"
        android:layout_toEndOf="@+id/ivProductImage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tvPrice"
        android:transitionName="price"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivProductImage"
        android:layout_toEndOf="@+id/ivProductImage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.25"
        android:layout_alignStart="@+id/ivProductImage"
        android:layout_below="@+id/ivProductImage" />

    <TextView
        android:id="@+id/tvReviewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProductImage"
        android:text="TextView"
        android:layout_below="@+id/ratingBar"/>

    <TextView
        android:id="@+id/tvInStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignStart="@+id/ivProductImage"
        android:layout_below="@+id/tvReviewCount"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ivProductImage"
        android:layout_below="@+id/tvInStock"
        android:text="TextView" />

</RelativeLayout>